<Window x:Class="Tenduke.Client.DefaultBrowserSample.AuthenticatingMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tenduke.Client.DefaultBrowserSample"
        mc:Ignorable="d"
        Title="Authentication in progress" Height="95" Width="259" WindowStyle="SingleBorderWindow" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" IsCancel="True" Click="buttonCancel_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="Please authenticate in your web browser..." TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
